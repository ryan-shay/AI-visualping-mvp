{
  "name": "visualwatch-gpt-discord",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npx tsx src/index.ts",
    "start": "node --enable-source-maps dist/index.js",
    "build": "tsc",
    "playwright:install": "npx playwright install --with-deps",
    "install:xvfb": "./install-xvfb.sh",
