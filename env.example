# Required API keys
OPENAI_API_KEY="sk-..."
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Tock reservation bot URL (for npm run juggle)
TOCK_URL="https://www.exploretock.com/alinea/search?date=2025-10-15&size=6&time=19%3A00"

# Book reservation bot (for npm run book) - stops after clicking book button for manual takeover
BOOK_URL="https://www.exploretock.com/alinea/search?date=2025-10-15&size=6&time=19%3A00"
BOOK_TIME="14:30"  # Optional: Schedule start time (HH:MM for today, or "2024-12-25 14:30" for specific date)

# Simple multi-site monitoring - just add your URLs separated by commas
WATCH_URLS="https://pocket-concierge.jp/en/restaurants/243892?extlink=pa-jp-ICS-PC_243892_HP_EN&date=2025-10-21&partySize=4&serviceType=DINNER,https://example.com/page2,https://example.com/page3"

# Optional: Global settings (good defaults provided)
GLOBAL_CHECK_MIN=4
GLOBAL_CHECK_MAX=6
MAX_CONCURRENCY=1
STAGGER_STARTUP_MINUTES=3
SCRAPE_TIMEOUT_SECONDS=90
LOG_LEVEL=info

# Browser settings
PLAYWRIGHT_HEADLESS=true  # Set to false for headfull mode (better for Tock sites)

# Xvfb settings (for headfull browsers in headless environments)
XVFB_ENABLED=true         # Auto-enable Xvfb when needed
XVFB_DISPLAY=99          # Virtual display number
XVFB_WIDTH=1920          # Screen width
XVFB_HEIGHT=1080         # Screen height
XVFB_DEPTH=24            # Color depth
SEND_BASELINE_NOTICE=true

# Browser settings
PLAYWRIGHT_HEADLESS=true  # Set to false to see browser window (useful for debugging)
